<% content_for :title do %>My account<% end %>

<div class="card-block">
  <ul class="nav nav-pills">
    <li class="nav-item">
      <%= link_to new_session_path(resource_name), :class => 'nav-link' do %>
        &laquo; Back
      <% end %>
    </li>
  </ul>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render 'partials/devise_messages' %>

  <div class="card-block">
    <div class="inner-addon left-addon form-group">
      <i class="fa fa-at"></i>
      <%= f.email_field :email,
                        :placeholder => 'Email',
                        :autofocus => true,
                        :required => true,
                        :class => 'form-control' %>
    </div>
  </div>

  <div class="card-block">
    <div class="inner-addon left-addon form-group">
      <i class="fa fa-lock"></i>
      <%= f.password_field :password,
                           :placeholder => 'New password',
                           :autocomplete => 'off',
                           :required => true,
                           :class => 'form-control' %>
    </div>
    <div class="inner-addon left-addon form-group">
      <i class="fa fa-lock"></i>
      <%= f.password_field :password_confirmation,
                           :placeholder => 'Confirm password',
                           :autocomplete => 'off',
                           :required => true,
                           :class => 'form-control' %>
    </div>
    <div class="inner-addon left-addon form-group">
      <i class="fa fa-lock"></i>
      <%= f.password_field :password,
                           :placeholder => 'current password',
                           :autocomplete => 'off',
                           :required => true,
                           :class => 'form-control' %>
    </div>
  </div>

  <div class="card-block">
    <%= f.submit 'Update', :class => 'btn btn-primary' %>
  </div>

  <div class="card-block">
    <hr>
  </div>

  <div class="card-block">
    <%= link_to 'Cancel my account', registration_path(resource_name),
                                    :data => { :confirm => 'Are you sure you wish to cancel your account? This will delete all your information and is irreversible!' },
                                    :method => :delete,
                                    :class => 'btn btn-link' %>
  </div>

<% end %>
